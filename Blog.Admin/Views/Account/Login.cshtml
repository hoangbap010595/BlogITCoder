@using Blog.Admin.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/_Login.cshtml";
}
<style>
    span.field-validation-error.text-danger {
        color: darkorange;
        float: left;
        margin-left: 5em;
    }

    .validation-summary-errors {
        display: inline-block;
    }

        .validation-summary-errors ul {
            list-style: none;
        }

            .validation-summary-errors ul li {
                color: darkorange;
                float: left;
                margin-left: 5em;
            }
</style>
<div id="loginbox">
    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-vertical", id = "loginform", role = "form" }))
    {
        <div class="control-group normal_text"> <h3><img src="~/Img/logo.png" alt="Logo" /></h3></div>
        <div class="control-group">
            <div class="controls">
                <div class="main_input_box">
                    <span class="add-on bg_lg"><i class="icon-user"></i></span>
                    @Html.TextBoxFor(m => m.Email, new { placeholder = "Tên đăng nhập", value = "a@gmail.com" })
                    @*<input type="text" placeholder="Username" />*@
                    <br />@Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="control-group">
            <div class="controls">
                <div class="main_input_box">
                    <span class="add-on bg_ly"><i class="icon-lock"></i></span>
                    @Html.PasswordFor(m => m.Password, new { placeholder = "Mật khẩu", value = "Omega@111" })
                    <br />@Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        @Html.ValidationSummary()
        <div class="form-actions">
            <span class="pull-left"><a href="/Account/ForgotPassword" class="flip-link btn btn-info" id="to-recover">Quên mật khẩu</a></span>
            <span class="pull-right"><button type="submit" class="btn btn-success">Đăng nhập</button></span>
            <span class="pull-right"><a href="/Account/Register" class="btn btn-danger">Đăng ký</a></span>    
        </div>
        @Html.AntiForgeryToken()
    }
    <form id="recoverform" action="#" class="form-vertical">
        <p class="normal_text">Enter your e-mail address below and we will send you instructions how to recover a password.</p>
        <div class="controls">
            <div class="main_input_box">
                <span class="add-on bg_lo"><i class="icon-envelope"></i></span><input type="text" placeholder="E-mail address" />
            </div>
        </div>
        <div class="form-actions">
            <span class="pull-left"><a href="#" class="flip-link btn btn-success" id="to-login">&laquo; Back to login</a></span>
            <span class="pull-right"><a class="btn btn-info">Reecover</a></span>
        </div>
    </form>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}